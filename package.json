{
  "name": "mirum-front-end-base",
  "version": "0.1.0",
  "description": "A base starting point for Mirum web projects",
  "main": "main.js",
  "config": {
    "destDir": "dist",
    "srcDir": "src",
    "cssOut": "dist/css",
    "cssMain": "master",
    "jsOut": "dist/js",
    "copyDirs": [
      "fonts",
      "images"
    ]
  },
  "dependencies": {
    "express": "^4.15.3",
    "susy": "~2.2.12"
  },
  "devDependencies": {
    "assets-webpack-plugin": "~3.5.1",
    "autoprefixer": "^8.1.0",
    "ava": "^0.25.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.12",
    "browser-sync-webpack-plugin": "^2.2.2",
    "chalk": "^2.3.2",
    "chokidar": "^1.7.0",
    "cross-env": "^5.1.4",
    "css-wipe": "~4.3.0",
    "eslint": "^4.19.0",
    "eslint-config-mirum": "^2.0.0",
    "eslint-loader": "^2.0.0",
    "fs-extra": "^5.0.0",
    "gulp-extname": "^0.2.2",
    "hashmark": "^5.0.0",
    "mkdirp": "~0.5.1",
    "node-sass": "^4.7.2",
    "node-sass-globbing": "~0.0.23",
    "node-sass-magic-importer": "^5.1.1",
    "nunjucks": "^3.1.2",
    "opn": "^5.1.0",
    "postcss": "^6.0.20",
    "postcss-cli": "^5.0.0",
    "rimraf": "~2.6.1",
    "rsvp": "^4.8.2",
    "sassdoc": "^2.5.0",
    "uglifyjs-webpack-plugin": "^1.2.3",
    "webpack": "^4.1.1",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-dev-server": "^3.1.1",
    "webpack-hot-middleware": "^2.21.2",
    "webpack-merge": "~4.1.0"
  },
  "scripts": {
    "autoprefixer": "postcss -u autoprefixer -r $npm_package_config_cssOut/**/*.css",
    "build": "node bin/run build --prod",
    "build:css": "node bin/run build-css",
    "build:html": "node bin/run build-html --writeHtml",
    "build:js": "node bin/run build-js",
    "clean": "node bin/run clean",
    "dev": "node bin/run build --writeHtml && node bin/server --watch",
    "lint:js": "eslint -f 'table' src/scripts/**",
    "serve": "node bin/run server --watch",
    "test": "ava"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.mirum.agency:7999/mirus/mirum-front-end-base.git"
  },
  "keywords": [
    "mirum",
    "front-end",
    "base"
  ],
  "author": "Michael Turnwall (Mirum, Inc)",
  "license": "MIT"
}
